{
  "manifest_version": 3,
  "name": "Phishing Link Detector",
  "version": "1.0",
  "description": "Detects phishing links using AI-powered analysis",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Phishing Link Detector"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon1.png",
    "128": "images/icon2.png"
  }
}